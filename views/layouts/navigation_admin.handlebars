<!DOCTYPE html>
<html lang="en">

<head>
    <!-- META SECTION -->
    <title>Admin Dashboard</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <!-- END META SECTION -->

    <!-- CSS INCLUDE -->
    <link rel="stylesheet" type="text/css" id="theme" href="css/theme-default.css" />
    <!-- EOF CSS INCLUDE -->
</head>
<!-- START PAGE CONTAINER -->
<div class="page-container">

    <!-- START PAGE SIDEBAR -->
    <div class="page-sidebar">
        <!-- START X-NAVIGATION -->
        <ul class="x-navigation">
            <li class="xn-logo">
                <a href="/">[Company Name]</a>
                <a href="#" class="x-navigation-control"></a>
            </li>
            <li class="xn-profile">
                <a href="#" class="profile-mini">
                   {{#if user.picture}}
                   <img src="{{user.picture}}" alt="John Doe"/>
                   {{else}}
                   <img src="assets/images/users/avatar.jpg" alt="John Doe"/>
                   {{/if}}
               </a>
               <div class="profile">
                <div class="profile-image">
                    {{#if user.picture}}
                    <img src="{{user.picture}}" alt="John Doe"/>
                    {{else}}
                    <img src="assets/images/users/avatar.jpg" alt="John Doe"/>
                    {{/if}}
                </div>
                <div class="profile-data">
                    {{#if user.companyname}}
                    <div class="profile-data-name">{{user.companyname}}</div>
                    <div class="profile-data-title">Owner</div>
                    {{else}}
                    <div class="profile-data-name">{{user.name}}</div>
                    <div class="profile-data-title">Employee</div>
                    {{/if}}
                </div>
            </div>
        </li>
        <li class="xn-title">Navigation</li>
        {{#if user._admin_id}}
        <li class="">
            <a href="/"><span class="fa fa-dashboard"></span> <span class="xn-text">Overview</span></a>
        </li>
        <li class="">
            <a href="patients_mode"><span class="fa fa-desktop"></span> <span class="xn-text">Patient Mode</span></a>
        </li>
        <li class="">
            <a href="patient_queue"><span class="fa fa-clock-o"></span> <span class="xn-text">Patient Queue</span></a>
        </li>
        <li class="">
            <a href="settings"><span class="fa fa-cogs"></span> <span class="xn-text">Settings</span></a>
        </li>
        {{else}}
        <li class="">
            <a href="/"><span class="fa fa-dashboard"></span> <span class="xn-text">Overview</span></a>
        </li>
        <li class="">
            <a href="patients_mode"><span class="fa fa-desktop"></span> <span class="xn-text">Patient Mode</span></a>
        </li>
        <li class="">
            <a href="patient_queue"><span class="fa fa-clock-o"></span> <span class="xn-text">Patient Queue</span></a>
        </li>
        <li class="">
            <a href="add_employees"><span class="fa fa-users"></span> <span class="xn-text">Manage Employees</span></a>
        </li>
        <li class="">
            <a href="form"><span class="fa fa-pencil"></span> <span class="xn-text">Edit Form</span></a>
        </li>
        <li class="">
            <a href="viewform"><span class="fa fa-pencil"></span> <span class="xn-text">View Form</span></a>
        </li>
        <li class="">
            <a href="settings"><span class="fa fa-cogs"></span> <span class="xn-text">Settings</span></a>
        </li>
        {{/if}}
    </ul>
    <!-- END X-NAVIGATION -->
</div>
<!-- END PAGE SIDEBAR -->

<!-- PAGE CONTENT -->
<div class="page-content">

    <!-- START X-NAVIGATION VERTICAL -->
    <ul class="x-navigation x-navigation-horizontal x-navigation-panel">
        <!-- TOGGLE NAVIGATION -->
        <li class="xn-icon-button">
            <a href="#" class="x-navigation-minimize"><span class="fa fa-dedent"></span></a>
        </li>
        <!-- END TOGGLE NAVIGATION -->
        <!-- SIGN OUT -->
        <li class="xn-icon-button pull-right">
            <a href="/logout" class="mb-control" data-box="#mb-signout"><span class="fa fa-sign-out"></span></a>
        </li>
        <!-- END SIGN OUT -->
    </ul>
    <!-- END X-NAVIGATION VERTICAL -->

    {{{body}}}

</div>
</div>

<!-- START SCRIPTS -->
<!-- START PLUGINS -->
<script type="text/javascript" src="js/plugins/jquery/jquery.min.js"></script>
<script type="text/javascript" src="js/plugins/jquery/jquery-ui.min.js"></script>
<script type="text/javascript" src="js/plugins/bootstrap/bootstrap.min.js"></script>
<!-- END PLUGINS -->

