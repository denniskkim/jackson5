<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="css/c3.min.css">
    <link rel="stylesheet" type="text/css" href="css/c3.css">

    <!-- Custom Fonts -->
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
      

   </head>
   <body bgcolor="#E6E6FA">
      <script src="js/c3.min.js"></script>
      <script src="js/c3.js"></script>
      <script src="js/d3.min.js"></script>
      <div class="navbar navbar-default navbar-fixed-top">
         <div class="container">
            <div class="navbar-header">
               <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle">
               <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span>
               <span class="icon-bar"></span><span class="icon-bar"></span></button>
               <a href="/" class="navbar-brand">
               <i class="fa fa-cube"></i>iReception</a>
            </div>
            <div class="collapse navbar-collapse">
               <ul class="nav navbar-nav">
                  <li><a href="/">Home</a></li>
                  <!-- <li><a href="/api">API Examples</a></li> -->
                  
                   <li>
                        <a href="#about">About</a>
                    </li>
                     <li>
                        <a href="#pricing">Pricing</a>
                    </li>
                    <li>
                        <a href="#contact">Contact</a>
                    </li>
               </ul>
               <ul class="nav navbar-nav navbar-right">
                  {{#if user}}

                     <li><a href="/management">Management</a></li>
                     <li><a href="/add_employees">Your Employees</a></li>
                     <li><a href="/patient_queue">Patient Queue</a></li>
                     <li><a href="/form">Check-In Form</a></li>
                  {{#if user.profile.picture}}
                     <li class="dropdown"><a href="{{user.profile.picture}}" data-toggle="dropdown" class="dropdown-toggle">
                     <i class="caret"> {{user.email}} </i></a>
                     <img src="{{user.profile.picture}}">
                     <ul class="dropdown-menu">
                        <li><a href="/account">My Account</a></li>
                        <li class="divider"></li>
                        <li><a href="/logout">Logout</a></li>
                     </ul>
                  </li>
                  {{else}}
                  <li class="dropdown">
                     <a href="" data-toggle="dropdown" class="dropdown-toggle">
                     <img src="img/user.jpg">
                     <i class="caret">
                     {{user.email}}
                     </i></a>
                     <ul class="dropdown-menu">
                        <li><a href="/account">My Account</a></li>
                        <li class="divider"></li>
                        <li><a href="/logout">Logout</a></li>
                     </ul>
                  </li>
                  {{/if}}
                  {{else}}
                    <li><a href="/login">Login</a></li>
                    <li><a href="/signup">Create Account</a></li>
                  {{/if}}
               </ul>
            </div>
         </div>
      </div>
      <div class="container">
         {{#if messages.errors }}
         <div class="alert alert-danger fade in">
            <button type="button" data-dismiss="alert" class="close"><i class="fa fa-times-circle-o"></i></button>
            <strong>Error!</strong>
            {{#each messages.errors}}
            {{messages.errors}}
            {{/each}}
         </div>
         {{/if}}
         {{#if messages.info }}
         <div class="alert alert-info fade in">
            <!-- <button type="button" data-dismiss="alert" class="close"><i class="fa fa-times-circle-o"></i></button> -->
            {{#each messages.info}}
               {messages.info.msg}}
            {{/each}}
         </div>
         {{/if}}
         {{#if messages.success }}
         <div class="alert alert-success fade in">
            <!-- <button type="button" data-dismiss="alert" class="close"><i class="fa fa-times-circle-o"></i></button> -->
            <strong>Success!</strong>
            {{#each messages.success}}
               {{messages.success.msg}}
            {{/each}}
         </div>
         {{/if}}
         {{{body}}}
      </div>
      <script src="/js/lib/jquery-2.2.0.min.js"></script>
      <script src="/js/lib/bootstrap.min.js"></script>
      <script src="/js/main.js"></script>
      <script src="js/lib/jquery.min.js"></script>
      <link rel="stylesheet" type="text/css" href="css/bootstrap.css">
      <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
      <link rel="stylesheet" type="text/css" href="css/main.css">
