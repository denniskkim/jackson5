<!DOCTYPE html>
<html lang="en" class="body-full-height">
    <head>        
        <!-- META SECTION -->
        <title>Find Your Company</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <!-- END META SECTION -->
        
        <!-- CSS INCLUDE -->
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>    
        <link rel="stylesheet" type="text/css" id="theme" href="css/theme-default.css"/>
        <!-- EOF CSS INCLUDE -->                                     
    </head>

<script type="text/javascript">

    $(function (){
        $('button').on('click', function(event) {

            if(event.currentTarget.name=="search") {    
                localStorage.setItem("subdomain", document.getElementById("subdomain").value);
            }
            
        });
    });


</script>

    <body>
        {{#if msg}}
            <div class="alert alert-danger">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>{{msg}}</strong>
            </div>
        {{/if}}

        <div class="login-container lightmode">
            <div class="login-box animated fadeInDown">
                <div class="login-logo"></div>
                <div class="login-body">
                    <div class="login-title"><strong>Find Your Company</strong></div>
                    <form class="form-horizontal" method="POST">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="text" name="subdomain" id="subdomain" class="form-control" placeholder="Your Company Subdomain"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-5 col-md-offset-1">
                            <button class="btn btn-primary btn-block" name="search" >Search</button>
                        </div>
                        <div class="col-md-5 col-md-offset-0">
                            <button type="home" class="btn btn-info btn-block btn-facebook" onclick="location.href='/logout'">Home</button>
                        </div>
                    </div>
                    </form>
                </div>
                <div class="login-footer">
                    <div class="pull-left">
                        &copy; 2016 Receptional
                    </div>
                    <div class="pull-right">
                        <a href="/about">About</a> |
                        <a href="#">Privacy</a> |
                        <a href="/contact">Contact Us</a>
                    </div>
                </div>
            </div>
            
        </div>
        
    </body>
</html>

