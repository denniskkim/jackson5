<!DOCTYPE html>
<html>
<head>
    <title>Patient Queue</title>

</head>
<script  src="http://code.jquery.com/jquery-1.9.1.min.js" ></script> 
<script src ="js/sweetalert.min.js"> </script> 
<link rel="stylesheet" type="text/css" href="css/sweetalert.css">  
<script type="text/javascript">
    $(function (){
    	var currentID;
    	var name;
        $('button').on('click', function(event) {
        	name = event.currentTarget.value;
        	currentID = event.currentTarget.id;
            if(event.currentTarget.name=="notify") {
                swal("Just notified the Patient!", "You clicked the button!", "success");
                $.post('/patient_queue', { // use the route here
                    currentID: currentID,
                    name: name
                }, function (currentID, status){

                });

            }
        	
		});
    });


</script>
        <!-- START BREADCRUMB -->
        <ul class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li class="active">Patient Queue</li>
        </ul>
        <!-- END BREADCRUMB -->

<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">
    <div class="row">
        <div class="col-md-12">
            {{#if msg}}
                        <div class="alert alert-success">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close"></a>
                            <strong>{{msg}}</strong>
                        </div>
             {{/if}}
            <!-- START MANAGE EMPLOYEES DATATABLE -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Patient Queue</h3>
                    <ul class="panel-controls">
                    </ul>
                </div>
                <div class="panel-body">
                        
                    <table class="table datatable sortable" id="patientqueue">
                        <thead>
                        <tr>
                            <th id="patientName">Name</th>
                            <th id="patientTel">Phone</th>
                            <th id="patientEmail">Email</th>
                            <th id="patientIn">Time in</th>
                            <th id="patientOut">Check Out</th>
                            <th id="action">Action</th>
                        </tr>
                        </thead>
                        {{#patients}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{phone_number}}</td>
                            <td>{{email}}</td>
                            <td>{{checkinTime}}</td>
                            <td>
                                <form method="POST"  action="/delete_patient/{{_id}}?_method=DELETE">
                                        <button class="btn btn-danger"  type="submit">Check Out</button>
                                </form>

                            </td>
                            <td>
                                <button class="btn btn-info" id="{{email}}" name="notify" value= "{{name}}" type="submit">Notify</button>

                            </td>
                        </tr>
                        {{/patients}}
                        <tbody>
                        </tbody>
                </div>
            </div>
        </div>
    </div>
</div>





</html>