                optionDiv.append(textLabel);
                optionDiv.append(textArea);
            }

            function addRadioOption() {
                var textArea = "<div class='col-md-9'><input type='text' class='form-control' name='labelname' id='defaultLabel' placeholder='Option 1' value=''/></div></br>";
