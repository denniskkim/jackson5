        <script>
            function allowDrop(ev) {
                ev.preventDefault();
            }
            function drag(ev) {
                ev.dataTransfer.setData("text", ev.target.id);
            }
            function drop(ev) {
                ev.preventDefault();
                var data = ev.dataTransfer.getData("text");
                //Deep copy - drag & copy
                var nodeCopy = document.getElementById(data).cloneNode(true);
                ev.target.appendChild(nodeCopy);
            }

            function changeTextID() {
                $(this).on("drop", function() {
                    var idChange = $('div[id^="textfield"]:last');
                    var num = parseInt(idChange.prop('id').match(/\d+/g), 10) +1;
                    idChange.prop('id', 'textfield' + num);
                    var labelChange = $('label[id^="txtlabel"]:last');
                    var num1= parseInt(labelChange.prop('id').match(/\d+/g), 10) +1;
                    labelChange.prop('id', 'txtlabel' + num);
                });
            }

            function changeDropID() {
                $(this).on("drop", function() {
                    var idChange = $('div[id^="dropdowndrop"]:last');
                    var num = parseInt(idChange.prop('id').match(/\d+/g), 10) +1;
                    idChange.prop('id', 'dropdowndrop' + num);
                    var labelChange = $('label[id^="droplabel"]:last');
                    var num1= parseInt(labelChange.prop('id').match(/\d+/g), 10) +1;
                    labelChange.prop('id', 'droplabel' + num);
                });
            }

            function changeRadioID() {
                $(this).on("drop", function() {
                    var idChange = $('div[id^="radiodrop"]:last');
                    var num = parseInt(idChange.prop('id').match(/\d+/g), 10) +1;
                    idChange.prop('id', 'radiodrop' + num);
                    var labelChange = $('label[id^="radlabel"]:last');
                    var num1= parseInt(labelChange.prop('id').match(/\d+/g), 10) +1;
                    labelChange.prop('id', 'radlabel' + num);
                });
            }

            function dropDelete(ev) {
                ev.preventDefault();
                var data = ev.dataTransfer.getData("text");
                var element = document.getElementById(data);
                element.parentNode.removeChild(element);
            }

            function addDropDownOption() {
